{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "KelaChatBot",
    "version": "1",
    "intents": [
      {
        "rejectionStatement": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "Cancelled."
            }
          ]
        },
        "name": "KelaGetCredentials",
        "version": "12",
        "fulfillmentActivity": {
          "codeHook": {
            "uri": "arn:aws:lambda:eu-west-1:260150289468:function:KelaUserCredentialFunction",
            "messageVersion": "1.0"
          },
          "type": "CodeHook"
        },
        "sampleUtterances": [
          "I would like to see my information",
          "Who am I",
          "Show my information",
          "What can you tell about me",
          "I want to see my information"
        ],
        "slots": [
          {
            "sampleUtterances": [],
            "slotType": "KelaPin",
            "slotTypeVersion": "1",
            "slotConstraint": "Required",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "Could you tell my your personal identification number?"
                },
                {
                  "contentType": "PlainText",
                  "content": "I'll need your personal identification number to show your information - so if you could say tell it to me?"
                }
              ],
              "responseCard": "{\"version\":1,\"contentType\":\"application/vnd.amazonaws.card.generic\",\"genericAttachments\":[]}",
              "maxAttempts": 2
            },
            "priority": 1,
            "name": "Pin"
          }
        ],
        "confirmationPrompt": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "Thank you. Please say \"yes\" if this is your PIN : {Pin}?"
            }
          ],
          "maxAttempts": 3
        },
        "dialogCodeHook": {
          "uri": "arn:aws:lambda:eu-west-1:260150289468:function:KelaUserCredentialFunction",
          "messageVersion": "1.0"
        }
      }
    ],
    "slotTypes": [
      {
        "description": "Could you tell me your personal identification number?",
        "name": "KelaPin",
        "version": "1",
        "enumerationValues": [
          {
            "value": "201202-010F",
            "synonyms": []
          },
          {
            "value": "101095-884E",
            "synonyms": []
          },
          {
            "value": "201293-103F",
            "synonyms": []
          }
        ],
        "valueSelectionStrategy": "ORIGINAL_VALUE"
      }
    ],
    "voiceId": "Salli",
    "childDirected": false,
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, can you please repeat that?"
        }
      ],
      "maxAttempts": 5
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I could not understand. Goodbye."
        }
      ]
    }
  }
}
